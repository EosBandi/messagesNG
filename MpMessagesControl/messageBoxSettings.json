[
  {
    "Settingname": "NMdisplayformat",
    "DisplayName": "Display Format",
    "Description": "Sets how the messages are displayed\r\nFolded - Same messages are displayed once, with a counter. Latest message at the top\r\nFoldedWithSeverity - Same as folder but messages are sorted by severity then by time\r\n Unfolded - All messages are displayed in the order they were received, without grouping\r\n",
    "FieldType": "List",
    "DefaultValue": "Folded",
    "FixValues": [
      "Folded",
      "FoldedWithSeverity",
      "Unfolded"
    ],
    "RangeMin": 0.0,
    "RangeMax": 0.0,
    "Persistent": "True"
  },
